{% extends 'base.html.twig' %}

{% block body %}

    <section class="content-wrap">

        <!-- Banner -->
        <div class="youplay-banner banner-top youplay-banner-parallax small">
            <div class="image" style="background-image: url('assets/images/banner-blog-bg.jpg')">
            </div>

            <div class="info">
                <div>
                    <div class="container">
                        <h1>{{ category.name }}</h1>
                        <p>
                            {{ category.description }}

                        </p>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Banner -->


        <div class="container youplay-news news-grid">
            <!-- News List -->
            <div class="row vertical-gutter multi-columns-row">
                {% for article in articleList %}
                    <!-- Single News Block -->
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="news-one">
                            <a href="{{ path('article_show', {'id': article.id, 'slug': article.slug}) }}"
                               class="angled-img">
                                <div class="img">
                                    <img src="{{ vich_uploader_asset(article, 'imageFile') }}"
                                         alt="image for : {{ article.titre }}">
                                </div>
                                <div class="bottom-info align-center">
                                    <h3>{{ article.titre }}</h3>
                                    <div class="description">
                                        {{ article.content|striptags|slice(0, 200)|raw }} ...

                                    </div>
                                    <span class="date"><i
                                                class="fa fa-calendar"></i> {{ article.getPublishedAt|date("d/m/Y H:i") }}</span>
                                </div>

                            </a>
                        </div>
                    </div>
                {% else %}
                    <p>Aucun article pour le moment</p>
                {% endfor %}
                <!-- /Single News Block -->

            </div>
            <!-- /News List -->
        </div>


    </section>

{% endblock %}