<div id="main-container">

    <article>
        {% if home is not defined %}
            {% if page > 1 %}
                <section>
                    <div class="pagination">
                        <a href="{{ path('category_show', {'id': category.id, 'slug': category.slug, 'page': page - 1}) }}"><
                            Page PrÃ©cÃ©dente</a>
                    </div>
                </section>
            {% endif %}
        {% endif %}
        {% for article in articleList %}
            <section>

                <div class="img-container">
                    <img src="{{ vich_uploader_asset(article, 'imageFile') }}"
                         width="240px" height="130px"
                         alt="image for : {{ article.titre }}"/>
                </div>
                <div class="info-container">

                    {% include 'article/_part/categoryList.html.twig' with { 'article': article } only %}

                    {% if loop.first %}
                        <h2>
                            <a href="{{ path('article_show', {'id': article.id, 'slug': article.slug}) }}">{{ article.titre }}</a>
                        </h2>
                    {% else %}
                        <h3>
                            <a href="{{ path('article_show', {'id': article.id, 'slug': article.slug}) }}">{{ article.titre }}</a>
                        </h3>
                    {% endif %}
                    <p>
                        Par <a href="#">{{ article.author.username }}</a>,
                        le {{ article.getPublishedAt|date("d/m/Y Ã  H:i") }} |
                        <a href="#">ðŸ—© 0 commentaire</a>

                    </p>
                    <p> {{ article.content|striptags|slice(0, 300)|raw }} ...
                        <a href="{{ path('article_show', {'id': article.id, 'slug': article.slug}) }}">
                            Lire la suite
                        </a>
                    </p>
                </div>


            </section>
        {% endfor %}
        {% if home is defined %}
            <section>
                <div class="pagination">
                    <a href="#">Voir tout les articles ></a>
                </div>
            </section>
        {% else %}
            {% if page < pageMax %}
                <section>
                    <div class="pagination">
                        <a href="{{ path('category_show', {'id': category.id, 'slug': category.slug, 'page': page + 1}) }}">Page
                            Suivante ></a>
                    </div>
                </section>
            {% endif %}
        {% endif %}

    </article>

</div>
